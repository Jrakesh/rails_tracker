.container-fluid
  .container
    .masthead
      h3.muted Active Progress
      .navbar
        .navbar-inner
          .container
            ul.nav
              li.active
                a href="#" Current issues
              li
                a href="#" My issues
      - @issues.each do |i|
        h1=i.title
        p.lead=i.body
        = link_to "Track", track_issue_path(i), class: "btn btn-large btn-success", method: :post
        hr
      .footer
        p &copy; Company 2013
        = @yes